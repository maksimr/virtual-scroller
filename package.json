{
  "name": "@maksimr/virtual-scroller",
  "version": "0.1.0-alpha",
  "description": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/maksimr/virtual-scroller.git"
  },
  "config": {
    "server": {
      "url": "http://localhost:1234"
    }
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "start": "parcel index.html",
    "build": "parcel build index.html --public-url '.'",
    "release": "node -pe 'require(\"./package.json\").version' | xargs -I{} git tag v{} && git push origin --tags",
    "lint": "eslint lib/**/*.js",
    "test": "jest ./lib",
    "test:watch": "npm test -- --watchAll",
    "test:e2e": "jest --config=test/e2e/config.js ./test/e2e",
    "test:type": "tsc"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "node": true
    },
    "globals": {
      "WeakMap": true,
      "describe": true,
      "it": true,
      "beforeEach": true,
      "spyOn": true,
      "expect": true
    },
    "rules": {
      "semi": "error",
      "no-undef": "error",
      "no-unused-vars": "error",
      "valid-jsdoc": [
        "error",
        {
          "requireReturn": false,
          "requireParamDescription": false,
          "requireReturnDescription": false
        }
      ]
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "typescript": "4.0.2",
    "@types/jest": "26.0.10",
    "@babel/core": "7.11.5",
    "@babel/plugin-transform-runtime": "7.11.5",
    "@babel/preset-env": "7.11.5",
    "eslint": "7.7.0",
    "jest": "26.4.2",
    "jest-cli": "26.4.2",
    "jest-image-snapshot": "4.2.0",
    "jest-puppeteer": "4.4.0",
    "parcel-bundler": "1.12.4",
    "puppeteer": "5.2.1"
  },
  "keywords": []
}
